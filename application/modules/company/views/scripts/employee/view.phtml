<?php 
use Dataservice\Html\CRUD;

echo($this->flashMessages()); 
echo CRUD\Nav::factory("Company", "index/view")->getHtml();
echo CRUD\Header::factory("Employee - View")->getHtml();

/* @var $Employee \Entities\Company\Employee */
$Employee	= $this->Employee;

$crudBody = new CRUD\Body();

$crudBody->start();

$Tabs = CRUD\Tabs::factory();

$Tabs->addEntityViewTab("Information", $Employee)
    ->addTab(
	CRUD\Tabs\Tab::factory(("Contact Info"))
	    ->addCollectionLists(
		array(
		    new CRUD\CollectionList($Employee, "PhoneNumbers"),
		    new CRUD\CollectionList($Employee, "Addresses"),
		    new CRUD\CollectionList($Employee, "EmailAddresses")
		)
	    )
    )
    ->addEntityViewTab("Website Account", $Employee->getAccount())
    ->render();

$crudBody->end();

echo $Tabs->getJS();
